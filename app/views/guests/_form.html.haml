= simple_form_for(@guest) do |f|
  = f.error_notification

  .form-inputs
    .row
      .small-6.column
        = f.input :firstname
      .small-6.column
        = f.input :lastname
    .row
      .small-6.column
        = f.input :status
      .small-6.column
        = f.input :contact_person
    .row
      .small-6.column
        = f.input :last_meeting
      .small-6.column
        = f.input :last_contact
    .row
      .small-6.column
        = f.input :sponsor_name
      .small-6.column
        %label
          Photo
          = f.attachment_field :profile_image
    .row
      .small-12.column
        = f.input :note

  .form-actions
    .row
      .small-12.column
        = f.button :submit, class: 'small-12 column even'
