%h1 Listing guests

%table#index
  %thead
    %tr
      %th Firstname
      %th Lastname
      %th Division
      %th Status
      %th Sponsor name
      %th Last contact
      %th
      %th
      %th

  %tbody
    - @guests.each do |guest|
      %tr
        %td= guest.firstname
        %td= guest.lastname
        %td= guest.division
        %td= guest.status
        %td= guest.sponsor_name
        %td= guest.last_contact
        %td= link_to 'Show', guest
        %td= link_to 'Edit', edit_guest_path(guest)
        %td= link_to 'Destroy', guest, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Guest', new_guest_path, class: 'button'
