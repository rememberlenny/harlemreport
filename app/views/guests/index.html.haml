#index_list

  .row
    .small-12.column
      %label
        Search
        %input.fuzzy-search{:placeholder => "Search"}/
    %br/
    %br/
  %table#index
    %thead
      %tr
        %th{data: {  sort: "string"}}
          Firstname
        %th{data: {  sort: "string"}} Lastname
        %th{data: {  sort: "string"}} Division
        %th{data: {  sort: "string"}} Status
        %th{data: {  sort: "string"}} Sponsor name
        %th{data: {  sort: "int"}} Last contact
        %th
        %th
        %th

    %tbody.list
      - @guests.each do |guest|
        %tr
          %td.firstname= guest.firstname
          %td.lastname= guest.lastname
          %td.division= guest.division
          %td.status= guest.status
          %td.sponsor_name= guest.sponsor_name
          %td.last_contact= guest.last_contact
          %td= link_to 'Show', guest
          %td= link_to 'Edit', edit_guest_path(guest)
          %td= link_to 'Destroy', guest, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Guest', new_guest_path, class: 'button'
