= simple_form_for(@member) do |f|
  = f.error_notification

  .form-inputs
    .row
      .small-6.column
        = f.input :firstname, required: true
      .small-6.column
        = f.input :lastname, required: true
    .row
      .small-6.column.datepicker
        = f.input :date_received, :input_html => { data: {field: "date"}}
      .small-6.column
        = f.input :sponsor_name
    .row
      .small-12
        #datepicker
    .row
      .small-12.column
        %label
          Photo
          = f.attachment_field :photo
    .row
      .small-6.column
        = f.input :chapter
      .small-6.column
        = f.input :district
    .row
      .small-12.column
        = f.input :note
  .form-actions
    .row
      .small-12.column
        = f.button :submit
